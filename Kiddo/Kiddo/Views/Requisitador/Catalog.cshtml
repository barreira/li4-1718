@model IEnumerable<Kiddo.Models.Babysitter>

@{
    ViewBag.Title = "Catalog";
    Layout = "~/Views/Shared/_RequisitadorLayout.cshtml";
    @Styles.Render("~/Content/Catalog.css");
}

<h2>Catálogo</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Photo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PricePerHour)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Photo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PricePerHour)
            </td>
        </tr>
    }

    <div class="btnDiv">
        <button class="btn btn-primary" onclick="location.href='@Url.Action("Create", "Services")';return false;">Requisitar serviço</button>
    </div>
</table>
